# 超级优化版本 - 使用requests替代playwright，更小更快
FROM python:3.12-alpine

# 安装必要的系统依赖
RUN apk add --no-cache \
    ca-certificates \
    curl \
    && rm -rf /var/cache/apk/*

WORKDIR /app

# 复制并安装Python依赖
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 复制优化的应用代码
COPY app_optimized.py ./app.py

# 创建非root用户
RUN adduser -D -s /bin/sh scraper
USER scraper

EXPOSE 8500
CMD ["python", "app.py"]
